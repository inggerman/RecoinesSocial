<h2>Agenda</h2>

    <div class="agenda" style="height:300px; overflow: auto">
        <div class="table-responsive">
            <table class="table table-condensed table-striped" >
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Titulo</th>
                        <th>Evento</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Single event in a single day -->
                    <tr ng-repeat="nota in notas">
                        <td class="agenda-date" class="active" rowspan="1">
                            <div class="dayofmonth">{{nota.recordatorio | amDateFormat:'Do'}}</div>
                            <div class="dayofweek">{{nota.recordatorio | amDateFormat:'dddd'}}</div>
                            <div class="shortdate text-muted">{{nota.recordatorio | amDateFormat:'MMMM'}}, {{nota.recordatorio | amDateFormat:'YYYY'}}</div>
                        </td>
                        <td class="agenda-time">
                            {{nota.recordatorio | date:'shortTime'}}
                        </td>
                        <td class="agenda-events">
                            <div class="agenda-event">
                                
                                <p class="text-danger">
                                <i class="glyphicon glyphicon-repeat text-muted" title="Repeating event"></i> {{nota.titulo}}</p>
                            </div>
                        </td>

                        <td class="agenda-events">
	                        <div class="dropdown pull-right">
						            <a  class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-cog"></i><span class="caret"></span></a>
						            <ul class="dropdown-menu">
						              <li><a href="#">Editar</a></li>
						              <li><a ng-click="eliminaragenda(nota.id)">Eliminar</a></li>
						            </ul>
			         		</div>
                            <div class="agenda-event">
                                
                                <p class="text-success">
                                <i class="glyphicon glyphicon-repeat text-muted" title="Repeating event"></i> {{nota.descripcion}}</p>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
